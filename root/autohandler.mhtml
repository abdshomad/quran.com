<%init>
	$stash = $c->stash;
	$view = $c->controller('View');
	$request = $c->request;
	$params = $request->params;
	$session = $c->session;
	$lang = $stash->{language}->{language_code};
	$dir = $stash->{language}->{direction};
	$class = $stash->{template};
	$class =~ s/^.+\/([^.]+)\.[^\/]+$/$1/;
</%init>
<!DOCTYPE html>
<html debug="true" lang="<% $lang %>" dir="<% $dir %>" prefix="og: http://ogp.me/ns#" prefix="fb: http://ogp.me/ns/fb#">
	<head>
		<& /web/global/head/meta.mhtml &>
		<& /web/global/head/title.mhtml &>
		<& /web/global/head/link.mhtml &>
		<& /web/global/head/style.mhtml &>
		<& /web/global/head/script.mhtml &>
	</head>
	<body role="application" class="<% $class %>" id="quran">
		<div id="head">
			<& /web/global/body/head.mhtml &>
		</div>
		<div id="body">
			<%perl>$m->call_next;</%perl>
		</div>
		<div id="foot">
			<& /web/global/body/foot.mhtml &>
		</div>
		<div id="debug">
			<button class="debug-button" id="test-direction" dir="<% $dir %>"><% $dir %></button>
			<button class="debug-button" id="test-scrolling">scr</button>
		</div>
		<div id="overlay"></div>
		<& /web/global/body/script.mhtml &>
	</body>
</html>
